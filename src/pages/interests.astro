---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import booksData from "../content/books.yaml";
import papersData from "../content/papers.yaml";
import type { Book, Paper } from "../types";

const allBooks = (booksData || []) as Book[];
const books = allBooks.map((book) => ({
    ...book,
    // Add link to detailed page (we'll need to update the card/display to use this link)
    link: `/interests/books/${book.slug}`,
}));

const allPapers = (papersData || []) as Paper[];
const papers = allPapers.map((paper) => ({
    ...paper,
    // Add link to detailed page
    link: `/interests/papers/${paper.slug}`,
}));
---

<Layout title="Interests">
    <div class="container mx-auto px-6 pt-40 pb-20">
        <!-- Intro Section from PDF -->
        <div class="max-w-5xl mb-20 grid md:grid-cols-2 gap-12">
            <div>
                <h1 class="text-5xl md:text-6xl font-black text-white mb-4">
                    Interests <span class="text-orange-500">.</span>
                </h1>
                <div class="flex items-start gap-3">
                    <div class="w-1 h-24 bg-orange-500 mt-1"></div>
                    <p class="text-gray-400 text-lg leading-relaxed">
                        While my primary focus is Computer Science, I believe in
                        a multidisciplinary approach to innovation. I spend a
                        significant amount of time exploring <span
                            class="text-white font-bold">Quantum Computing</span
                        >,
                        <span class="text-white font-bold">Robotics</span>, and <span
                            class="text-white font-bold">Philosophy</span
                        >.
                    </p>
                </div>
            </div>
            <div
                class="p-8 rounded-2xl bg-white/5 border border-white/10 backdrop-blur-sm"
            >
                <h3
                    class="text-orange-500 font-bold tracking-widest mb-4 uppercase"
                >
                    Key Areas
                </h3>
                <ul class="space-y-3 text-gray-300">
                    <li class="flex items-center gap-3">
                        <span class="w-2 h-2 rounded-full bg-orange-500"></span>
                        Deep Reinforcement Learning
                    </li>
                    <li class="flex items-center gap-3">
                        <span class="w-2 h-2 rounded-full bg-neon-purple"
                        ></span>
                        Quantum Machine Learning
                    </li>
                    <li class="flex items-center gap-3">
                        <span class="w-2 h-2 rounded-full bg-neon-gold"></span>
                        Autonomous Navigation
                    </li>
                    <li class="flex items-center gap-3">
                        <span class="w-2 h-2 rounded-full bg-neon-red"></span>
                        High Performance Computing
                    </li>
                </ul>
            </div>
        </div>

        <!-- Books Section -->
        <section class="mb-20">
            <h2
                class="text-3xl font-bold text-white mb-8 flex items-center gap-4"
            >
                <span class="w-12 h-1 bg-orange-300"></span>
                Books Read
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {
                    books.map((book) => (
                        <Card
                            title={book.title}
                            subtitle="Book"
                            description={`By ${book.author}`}
                            tags={book.tags || []}
                            link={book.link}
                            image={book.cover}
                            color="light-orange"
                            cardType="book"
                        />
                    ))
                }
            </div>
        </section>

        <!-- Papers Section -->
        <section>
            <h2
                class="text-3xl font-bold text-white mb-8 flex items-center gap-4"
            >
                <span class="w-12 h-1 bg-orange-500"></span>
                Papers Read
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {
                    papers.map((paper) => (
                        <Card
                            title={paper.title}
                            subtitle="Paper"
                            description={`Authors: ${paper.authors.join(", ")}`}
                            tags={[paper.conference, ...(paper.tags || [])]}
                            link={paper.link}
                            date={paper.year.toString()}
                            color="orange"
                            cardType="paper"
                        />
                    ))
                }
            </div>
        </section>
    </div>

    <footer
        class="py-12 border-t border-white/5 w-full text-center text-gray-500 text-sm bg-black/50 backdrop-blur-sm"
    >
        <p>
            &copy; {new Date().getFullYear()} Mukund. Built with Astro & TailwindCSS.
        </p>
    </footer>
</Layout>
