---
import Layout from "../layouts/Layout.astro";

const books = [
    {
        title: "Clean Code",
        author: "Robert C. Martin",
        cover: "https://via.placeholder.com/150x220",
    },
    {
        title: "The Pragmatic Programmer",
        author: "Andrew Hunt",
        cover: "https://via.placeholder.com/150x220",
    },
    {
        title: "Deep Learning",
        author: "Ian Goodfellow",
        cover: "https://via.placeholder.com/150x220",
    },
    {
        title: "Atomic Habits",
        author: "James Clear",
        cover: "https://via.placeholder.com/150x220",
    },
];

const papers = [
    {
        title: "Attention Is All You Need",
        authors: "Vaswani et al.",
        conf: "NeurIPS 2017",
        link: "#",
    },
    {
        title: "ResNet: Deep Residual Learning",
        authors: "He et al.",
        conf: "CVPR 2016",
        link: "#",
    },
    {
        title: "BERT: Pre-training of Deep Bidirectional Transformers",
        authors: "Devlin et al.",
        conf: "NAACL 2019",
        link: "#",
    },
];
---

<Layout title="Interests | Mukund">
    <div class="container mx-auto px-6 pt-32 pb-20">
        <!-- Intro Section from PDF -->
        <div class="max-w-5xl mb-20 grid md:grid-cols-2 gap-12">
            <div>
                <h1
                    class="text-6xl md:text-8xl font-black text-white mb-8 tracking-tighter"
                >
                    INTERESTS <span class="text-neon-cyan text-4xl align-top"
                        >.</span
                    >
                </h1>
                <p class="text-gray-400 text-lg leading-relaxed">
                    While my primary focus is Computer Science, I believe in a
                    multidisciplinary approach to innovation. I spend a
                    significant amount of time exploring <span
                        class="text-white font-bold">Quantum Computing</span
                    >,
                    <span class="text-white font-bold">Robotics</span>, and <span
                        class="text-white font-bold">Philosophy</span
                    >.
                </p>
            </div>
            <div
                class="p-8 rounded-2xl bg-white/5 border border-white/10 backdrop-blur-sm"
            >
                <h3
                    class="text-neon-cyan font-bold tracking-widest mb-4 uppercase"
                >
                    Key Areas
                </h3>
                <ul class="space-y-3 text-gray-300">
                    <li class="flex items-center gap-3">
                        <span class="w-2 h-2 rounded-full bg-neon-cyan"></span>
                        Deep Reinforcement Learning
                    </li>
                    <li class="flex items-center gap-3">
                        <span class="w-2 h-2 rounded-full bg-neon-purple"
                        ></span>
                        Quantum Machine Learning
                    </li>
                    <li class="flex items-center gap-3">
                        <span class="w-2 h-2 rounded-full bg-neon-gold"></span>
                        Autonomous Navigation
                    </li>
                    <li class="flex items-center gap-3">
                        <span class="w-2 h-2 rounded-full bg-neon-red"></span>
                        High Performance Computing
                    </li>
                </ul>
            </div>
        </div>

        <!-- Books Section -->
        <section class="mb-20">
            <h2
                class="text-3xl font-bold text-white mb-8 flex items-center gap-4"
            >
                <span class="w-12 h-1 bg-neon-cyan"></span>
                Books Read
            </h2>
            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
                {
                    books.map((book) => (
                        <div class="group relative">
                            <div class="aspect-[2/3] rounded-lg overflow-hidden border border-white/10 bg-white/5 group-hover:shadow-[0_0_20px_-5px_rgba(0,243,255,0.3)] transition-all">
                                <img
                                    src={book.cover}
                                    alt={book.title}
                                    class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity"
                                />
                            </div>
                            <h3 class="mt-3 text-white font-medium text-sm leading-tight group-hover:text-neon-cyan transition-colors">
                                {book.title}
                            </h3>
                            <p class="text-xs text-gray-500">{book.author}</p>
                        </div>
                    ))
                }
            </div>
        </section>

        <!-- Papers Section -->
        <section>
            <h2
                class="text-3xl font-bold text-white mb-8 flex items-center gap-4"
            >
                <span class="w-12 h-1 bg-neon-purple"></span>
                Papers Read
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {
                    papers.map((paper) => (
                        <a
                            href={paper.link}
                            class="block p-6 rounded-xl bg-white/5 border border-white/10 hover:border-neon-purple/50 transition-all hover:bg-neon-purple/5 group"
                        >
                            <h3 class="text-lg font-bold text-white group-hover:text-neon-purple transition-colors mb-2">
                                {paper.title}
                            </h3>
                            <p class="text-sm text-gray-400">{paper.authors}</p>
                            <div class="mt-4 flex items-center justify-between">
                                <span class="text-xs font-mono px-2 py-1 rounded bg-black/50 border border-white/10 text-gray-500">
                                    {paper.conf}
                                </span>
                                <span class="text-neon-purple text-sm opacity-0 group-hover:opacity-100 transition-opacity">
                                    Read &rarr;
                                </span>
                            </div>
                        </a>
                    ))
                }
            </div>
        </section>
    </div>
</Layout>
