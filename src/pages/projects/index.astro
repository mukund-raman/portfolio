---
import Layout from "../../layouts/Layout.astro";
import Card from "../../components/Card.astro";

const projects = [
    {
        title: "Portfolio v2",
        subtitle: "Web Development",
        description:
            "A high-performance personal portfolio built with Astro, Tailwind v4, and a custom neon cyberpunk aesthetic.",
        tags: ["Astro", "Tailwind", "Vercel"],
        link: "https://github.com/mkraman/portfolio",
        viewLink: "https://github.com/mkraman/portfolio", // Demo link
        image: "https://via.placeholder.com/600x400/000000/FFFFFF?text=Portfolio+v2",
        color: "gold",
    },
    {
        title: "EcoSense",
        subtitle: "IoT & ML",
        description:
            "Smart agriculture system using ESP32 sensors and TFlite for disease detection in crops.",
        tags: ["C++", "Python", "TensorFlow Lite"],
        link: "#",
        image: "https://via.placeholder.com/600x400/000000/FFFFFF?text=EcoSense",
        color: "gold",
    },
    {
        title: "Neural Style Transfer",
        subtitle: "Computer Vision",
        description:
            "Implementation of artistic style transfer using VGG19 network.",
        tags: ["PyTorch", "Deep Learning"],
        link: "#",
        image: "https://via.placeholder.com/600x400/000000/FFFFFF?text=Neural+Style",
        color: "gold",
    },
    {
        title: "Distributed KV Store",
        subtitle: "Systems",
        description:
            "Fault-tolerant key-value store using Raft consensus algorithm.",
        tags: ["Go", "Distributed Systems"],
        link: "#",
        image: "https://via.placeholder.com/600x400/000000/FFFFFF?text=KV+Store",
        color: "gold",
    },
];
---

<Layout title="Projects | Mukund">
    <div class="container mx-auto px-6 pt-32 pb-20">
        <div class="max-w-4xl mb-16">
            <h1
                class="text-6xl md:text-8xl font-black text-white mb-6 tracking-tighter"
            >
                PROJECTS <span class="text-neon-gold text-4xl align-top">.</span
                >
            </h1>
            <p
                class="text-gray-400 text-xl max-w-2xl leading-relaxed border-l-4 border-neon-gold pl-6"
            >
                A collection of my technical work, ranging from <span
                    class="text-white">embedded systems</span
                > to <span class="text-white">full-stack web apps</span>.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {
                projects.map((project) => (
                    // @ts-ignore
                    <Card {...project} />
                ))
            }
        </div>
    </div>
</Layout>
