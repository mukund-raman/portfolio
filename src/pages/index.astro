---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import SkillBar from "../components/SkillBar.astro";
import Card from "../components/Card.astro";

const recentJobs = [
	{
		title: "Research Assistant",
		subtitle: "UT Austin",
		date: "Jan 2024 - Present",
		description:
			"Conducting research on reinforcement learning algorithms for autonomous systems.",
		tags: ["Python", "PyTorch", "ROS"],
		link: "/experiences/research-assistant",
		color: "cyan",
	},
	{
		title: "Software Engineering Intern",
		subtitle: "Tech Giant Corp",
		date: "May 2023 - Aug 2023",
		description:
			"Developed scalable backend services handling high-volume traffic.",
		tags: ["Java", "Spring Boot", "AWS"],
		link: "/experiences/swe-intern",
		color: "red",
	},
];
---

<Layout title="Mukund | Computer Scientist">
	<Hero />

	<!-- Skills Header -->
	<section class="w-full py-12 px-6 container mx-auto">
		<h2 class="text-4xl md:text-4xl font-black text-white mb-3">
			What I Do <span class="text-neon-purple">.</span>
		</h2>
		<p class="text-gray-400 text-lg">
			Skills I've acquired throughout the years.
		</p>
	</section>

	<SkillBar />

	<section class="w-full py-20 px-6 container mx-auto">
		<div class="flex justify-between items-end mb-12">
			<div>
				<h2 class="text-4xl font-black text-white mb-2">
					Experience <span class="text-neon-cyan">.</span>
				</h2>
				<p class="text-gray-400">
					A selected timeline of my professional work.
				</p>
			</div>
			<a
				href="/experiences"
				class="hidden md:flex items-center gap-2 text-neon-cyan hover:text-white transition-colors"
			>
				View All
				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="20"
					height="20"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
					><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"
					></path></svg
				>
			</a>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
			{
				recentJobs.map((job) => (
					// @ts-ignore
					<Card {...job} />
				))
			}
		</div>

		<div class="mt-8 text-center md:hidden">
			<a
				href="/experiences"
				class="inline-block px-6 py-2 rounded-full border border-neon-cyan/30 text-neon-cyan"
				>View All Experience</a
			>
		</div>
	</section>

	<footer
		class="py-12 border-t border-white/5 w-full text-center text-gray-500 text-sm bg-black/50 backdrop-blur-sm"
	>
		<p>
			&copy; {new Date().getFullYear()} Mukund. Built with Astro & TailwindCSS.
		</p>
	</footer>
</Layout>
