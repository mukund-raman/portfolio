---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import SkillBar from "../components/SkillBar.astro";
import Card from "../components/Card.astro";
import TechTooltip from "../components/TechTooltip.astro";
import type { Project, BlogPost, Experience, Company } from "../types";
import projectsData from "../content/projects.yaml";
import blogData from "../content/blog.yaml";
import experiencesData from "../content/experiences.yaml";
import companiesData from "../content/companies.yaml";

// Create a mapping of company names to their icons
const companyMap = new Map(
	(companiesData as Company[]).map((company) => [company.name, company.icon]),
);

// Fetch Projects from YAML
const allProjects = (projectsData || []) as Project[];
let startProjects = allProjects.filter(
	(project: Project) => project.isFeatured,
);

// If we have fewer than 10 featured projects, fill with non-featured ones
if (startProjects.length < 10) {
	const nonFeatured = allProjects.filter(
		(project: Project) => !project.isFeatured,
	);
	startProjects = [...startProjects, ...nonFeatured];
}

const recentProjects = startProjects.slice(0, 10).map((project: Project) => ({
	...project,
	link: `/projects/${project.slug}`,
}));

// Fetch Blog Posts from YAML
const allPosts = (blogData || []) as BlogPost[];
// Sort by date (newest first)
const recentPosts = allPosts.slice(0, 10).map((post: BlogPost) => ({
	...post,
	link: `/blog/${post.slug}`,
}));

// Fetch Experiences from YAML
const allExperiences = (experiencesData || []) as Experience[];
// Sort by date: Future first, then Present, then Past (all by start date descending)
const sortedExperiences = allExperiences.sort(
	(a: Experience, b: Experience) => {
		const parseDateVal = (dateStr: string) => {
			if (!dateStr) return 0;
			const cleanStr = dateStr.trim().toLowerCase();
			// Don't treat "present" specially here - it will be handled by category
			if (cleanStr === "present") return 999999;

			const yearMatch = cleanStr.match(/(\d{4})/);
			const year = yearMatch ? parseInt(yearMatch[0], 10) : 0;

			const months: { [key: string]: number } = {
				jan: 1,
				feb: 2,
				mar: 3,
				apr: 4,
				may: 5,
				jun: 6,
				jul: 7,
				aug: 8,
				sep: 9,
				oct: 10,
				nov: 11,
				dec: 12,
				spring: 3,
				summer: 6,
				fall: 9,
				winter: 12,
			};

			let month = 1;
			for (const [key, val] of Object.entries(months)) {
				if (cleanStr.includes(key)) {
					month = val;
					break;
				}
			}

			return year * 100 + month;
		};

		const getDates = (dateStr: string) => {
			if (!dateStr) return { start: 0, end: 0, isPresent: false };
			const parts = dateStr.split(" - ");
			const startStr = parts[0];
			const endStr = parts.length > 1 ? parts[1] : parts[0];

			return {
				start: parseDateVal(startStr),
				end: parseDateVal(endStr),
				isPresent: endStr.trim().toLowerCase() === "present",
			};
		};

		const datesA = getDates(a.date);
		const datesB = getDates(b.date);

		// Current date for comparison (dynamically calculated)
		const now = new Date();
		const currentDate = now.getFullYear() * 100 + (now.getMonth() + 1);

		// Categorize experiences
		const isFutureA = datesA.start > currentDate;
		const isFutureB = datesB.start > currentDate;
		const isPresentA = datesA.isPresent && !isFutureA;
		const isPresentB = datesB.isPresent && !isFutureB;

		// 1. Future experiences come first
		if (isFutureA && !isFutureB) return -1;
		if (!isFutureA && isFutureB) return 1;

		// 2. Present experiences come second (after future, before past)
		if (isPresentA && !isPresentB && !isFutureB) return -1;
		if (!isPresentA && isPresentB && !isFutureA) return 1;

		// 3. Within same category, sort by start date (descending), then end date
		if (datesA.start !== datesB.start) {
			return datesB.start - datesA.start;
		}
		return datesB.end - datesA.end;
	},
);

const experiences = sortedExperiences.slice(0, 4).map((exp: Experience) => ({
	...exp,
	detailLink: `/experiences/${exp.slug}`,
	companyIcon: companyMap.get(exp.company),
}));
---

<Layout title="Home">
	<Hero />

	<!-- Skills Header -->
	<section class="w-full py-12 px-6 max-w-[90%] mx-auto">
		<h2 class="text-4xl md:text-4xl font-black text-white mb-3">
			What I Do <span class="text-orange-500">.</span>
		</h2>
		<p class="text-gray-400 text-lg">
			Skills I've acquired throughout the years.
		</p>
	</section>

	<SkillBar />

	<!-- Projects Section -->
	<section class="w-full py-20 px-6 max-w-[90%] mx-auto">
		<div class="mb-12">
			<h2 class="text-4xl font-black text-white mb-2">
				Projects <span class="text-neon-gold">.</span>
			</h2>
			<p class="text-gray-400">
				Selected work showcasing my technical skills.
			</p>
		</div>

		<div
			class="grid grid-cols-1 md:grid-cols-[repeat(auto-fill,minmax(500px,1fr))] gap-x-6 gap-y-0 grid-rows-[auto] auto-rows-[0px] overflow-y-hidden mb-8"
		>
			{
				recentProjects.map((project: any) => (
					<div class="h-full">
						<Card {...project} />
					</div>
				))
			}
		</div>

		<div class="text-center">
			<a
				href="/projects"
				class="inline-block px-8 py-3 rounded-full border-2 border-neon-gold/30 text-neon-gold hover:bg-neon-gold/10 hover:border-neon-gold transition-all font-bold"
			>
				Browse All Projects
			</a>
		</div>
	</section>

	<!-- Blog Section -->
	<section class="w-full py-20 px-6 max-w-[90%] mx-auto">
		<div class="mb-12">
			<h2 class="text-4xl font-black text-white mb-2">
				Blogs <span class="text-neon-purple">.</span>
			</h2>
			<p class="text-gray-400">
				Thoughts, tutorials, and insights on software development.
			</p>
		</div>

		<div
			class="grid grid-cols-1 md:grid-cols-[repeat(auto-fill,minmax(500px,1fr))] gap-x-6 gap-y-0 grid-rows-[auto] auto-rows-[0px] overflow-y-hidden mb-8"
		>
			{
				recentPosts.map((post: any) => (
					<div class="h-full">
						<Card {...post} cardType="blog" />
					</div>
				))
			}
		</div>

		<div class="text-center">
			<a
				href="/blog"
				class="inline-block px-8 py-3 rounded-full border-2 border-neon-purple/30 text-neon-purple hover:bg-neon-purple/10 hover:border-neon-purple transition-all font-bold"
			>
				Browse All Posts
			</a>
		</div>
	</section>

	<!-- Experience Timeline Section -->
	<section class="w-full py-20 px-6 max-w-[90%] mx-auto">
		<div class="mb-12">
			<h2 class="text-4xl font-black text-white mb-2">
				Experience <span class="text-neon-red">.</span>
			</h2>
			<p class="text-gray-400">A timeline of my professional journey.</p>
		</div>

		<!-- Centered Alternating Timeline -->
		<div class="relative w-full mx-auto">
			<!-- Center vertical line -->
			<div
				class="hidden lg:block absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-gradient-to-b from-neon-red/50 via-neon-red/30 to-transparent"
			>
			</div>

			{
				experiences.map((job: any, index: number) => {
					const isLeft = index % 2 === 0;
					const topOffset = index * 280; // Stagger vertically

					return (
						<div
							class={`relative ${index === experiences.length - 1 ? "" : "mb-8"} lg:-mb-25`}
							style={`margin-top: ${index === 0 ? "0" : "0px"}`}
						>
							{/* Content Card - alternating sides - MUST come first for peer */}
							<div
								class={`peer relative lg:w-[48%] ${isLeft ? "lg:mr-auto lg:pr-12" : "lg:ml-auto lg:pl-12"} z-20`}
							>
								<div class="group p-6 rounded-2xl bg-black/40 backdrop-blur-md border border-white/10 hover:border-neon-red/50 hover:shadow-[0_0_30px_rgba(255,0,60,0.2)] transition-all duration-300">
									{/* Connecting line from card to center */}
									<div
										class={`hidden lg:block absolute top-8 w-12 h-0.5 bg-gradient-to-${isLeft ? "r" : "l"} from-neon-red/30 to-transparent ${isLeft ? "right-0 translate-x-full" : "left-0 -translate-x-full"}`}
									/>

									<div class="flex gap-4 mb-3">
										{/* Company Logo */}
										{job.companyIcon && (
											<img
												src={job.companyIcon}
												alt={`${job.company} logo`}
												class="w-16 h-16 rounded-lg object-contain object-center flex-shrink-0 bg-white/5 p-2"
											/>
										)}

										<div class="flex-1 min-w-0">
											<div class="flex gap-3 items-start justify-between">
												<a
													href={job.detailLink}
													class="flex-1 min-w-0"
												>
													<h4
														class="font-bold text-white group-hover:text-neon-red transition-colors cursor-pointer leading-snug auto-fit-text"
														style="word-break: normal; hyphens: none; overflow-wrap: break-word; white-space: normal;"
													>
														{job.role}
													</h4>
												</a>
												<span
													class="text-xs font-mono text-neon-red/80 bg-neon-red/5 px-2.5 py-1.5 rounded border border-neon-red/20 text-center leading-snug flex-shrink-0"
													style="font-size: clamp(0.25rem, 1.8vw, 0.75rem); word-break: normal; hyphens: none; overflow-wrap: break-word; max-width: 45%; white-space: normal;"
												>
													{job.date}
												</span>
											</div>
											<div class="flex flex-col gap-0.5 mt-2">
												<div
													class="text-gray-500 font-bold z-10 relative flex gap-1 items-baseline"
													style="font-size: clamp(0.7rem, 2vw, 0.95rem); text-wrap: pretty;"
												>
													<span>@</span>
													<TechTooltip
														text={job.company}
														type="company"
														color="red"
													>
														<a
															href={job.link}
															target="_blank"
															rel="noopener noreferrer"
															class="hover:text-neon-red transition-colors duration-300 border-b border-transparent hover:border-neon-red/50"
															onclick="event.stopPropagation()"
														>
															{job.company}
														</a>
													</TechTooltip>
												</div>
												{job.location && (
													<div
														class="text-gray-400 font-normal z-10 relative"
														style="font-size: clamp(0.65rem, 1.8vw, 0.85rem); text-wrap: pretty;"
													>
														{job.location}
													</div>
												)}
											</div>
										</div>
									</div>

									<p class="text-gray-400 text-sm leading-relaxed mb-4">
										{job.description}
									</p>

									{job.skills && (
										<div class="flex flex-wrap gap-2">
											{job.skills.map((skill: string) => (
												<TechTooltip
													text={skill}
													color="red"
												>
													<span class="text-[10px] uppercase tracking-wider font-bold text-gray-500 px-2 py-1 bg-white/5 rounded border border-white/5 group-hover:border-neon-red/20 transition-colors">
														{skill}
													</span>
												</TechTooltip>
											))}
										</div>
									)}

									{/* View Experience Button */}
									<div class="mt-4 pt-4 border-t border-white/5">
										<a
											href={job.detailLink}
											class="inline-flex items-center text-xs font-bold uppercase tracking-wide text-neon-red hover:opacity-80 transition-all"
										>
											View Experience
											<svg
												xmlns="http://www.w3.org/2000/svg"
												width="14"
												height="14"
												viewBox="0 0 24 24"
												fill="none"
												stroke="currentColor"
												stroke-width="2"
												stroke-linecap="round"
												stroke-linejoin="round"
												class="ml-1 transition-transform group-hover:translate-x-1"
											>
												<path d="M5 12h14" />
												<path d="m12 5 7 7-7 7" />
											</svg>
										</a>
									</div>
								</div>
							</div>

							{/* Timeline Node - centered - comes after peer */}
							<div class="hidden lg:block absolute left-1/2 transform -translate-x-1/2 top-8 w-5 h-5 rounded-full bg-black border-3 border-neon-red shadow-[0_0_20px_rgba(255,0,60,0.5)] peer-hover:bg-neon-red z-10 peer-hover:scale-110 transition-all" />
						</div>
					);
				})
			}
		</div>

		<div class="text-center mt-8 md:mt-40">
			<a
				href="/experiences"
				class="inline-block px-8 py-3 rounded-full border-2 border-neon-red/30 text-neon-red hover:bg-neon-red/10 hover:border-neon-red transition-all font-bold"
			>
				Browse All Experiences
			</a>
		</div>
	</section>

	<footer
		class="py-12 border-t border-white/5 w-full text-center text-gray-500 text-sm bg-black/50 backdrop-blur-sm"
	>
		<p>
			&copy; {new Date().getFullYear()} Mukund. Built with Astro & TailwindCSS.
		</p>
	</footer>
</Layout>

<script>
	import "../scripts/auto-fit-text.ts";
</script>
