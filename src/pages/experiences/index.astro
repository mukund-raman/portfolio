---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

// Fetch experiences from content collection
const allExperiences = await getCollection("experiences");

// Sort experiences by date (newest first)
const experiences = allExperiences
    .sort((a, b) => {
        const getDateVal = (dateStr: string) => {
            if (!dateStr) return 0;
            const parts = dateStr.split(" - ");
            const end = parts[1] || parts[0]; // Use end date, or start if single date
            if (end.toLowerCase() === "present") return 9999;
            return parseInt(end, 10) || 0;
        };
        return getDateVal(b.data.date) - getDateVal(a.data.date);
    })
    .map((exp) => ({
        ...exp.data,
        link: `/experiences/${exp.slug}`,
    }));
---

<Layout title="Experiences">
    <!-- Add more top padding to account for fixed navbar -->
    <div class="pt-40 pb-20 px-6">
        <div class="w-full max-w-[90%] mx-auto">
            <!-- Header - Left aligned with indent to match card start (7.5% + 50% for center = 57.5% from left edge on left cards) -->
            <div class="mb-12">
                <h1 class="text-5xl md:text-6xl font-black text-white mb-4">
                    Experiences <span class="text-neon-red">.</span>
                </h1>
                <div class="flex items-center gap-3">
                    <div class="w-1 h-6 bg-neon-red"></div>
                    <p class="text-gray-400 text-lg max-w-2xl">
                        A comprehensive timeline of my professional journey
                        across software engineering, research, and development.
                    </p>
                </div>
            </div>
            <!-- Centered Timeline with Fully Left/Right Cards -->
            <div class="relative w-full mx-auto">
                <!-- Center vertical line -->
                <div
                    class="hidden lg:block absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-gradient-to-b from-neon-red/50 via-neon-red/30 to-transparent"
                >
                </div>

                {
                    experiences.map((job, index) => {
                        const isLeft = index % 2 === 0;

                        return (
                            <div
                                class={`group relative ${index === experiences.length - 1 ? "" : "mb-8"} lg:-mb-35`}
                            >
                                {/* Content Card - fully left or right of timeline */}
                                <div
                                    class={`peer relative w-full lg:w-[48%] ${isLeft ? "lg:mr-auto" : "lg:ml-auto"}`}
                                >
                                    <div class="p-8 rounded-2xl bg-black/40 backdrop-blur-md border border-white/10 hover:border-neon-red/50 hover:shadow-[0_0_30px_rgba(255,0,60,0.2)] transition-all duration-300">
                                        {/* Connecting line from card edge to center */}
                                        <div
                                            class={`hidden lg:block absolute top-12 w-12 h-0.5 bg-gradient-to-${isLeft ? "r" : "l"} from-neon-red/30 to-transparent ${isLeft ? "left-full" : "right-full"}`}
                                        />

                                        <div class="flex flex-col gap-3 mb-4">
                                            <div class="flex items-start justify-between gap-4 flex-wrap">
                                                <a href={job.link}>
                                                    <h4 class="text-2xl font-bold text-white group-hover:text-neon-red transition-colors cursor-pointer">
                                                        {job.role}
                                                    </h4>
                                                </a>
                                                <span class="text-sm font-mono text-neon-red/80 bg-neon-red/5 px-3 py-1.5 rounded border border-neon-red/20 whitespace-nowrap">
                                                    {job.date}
                                                </span>
                                            </div>
                                            <p class="text-gray-400 font-medium text-lg">
                                                @ {job.company}
                                            </p>
                                        </div>

                                        <p class="text-gray-400 text-base leading-relaxed mb-6">
                                            {job.description}
                                        </p>

                                        {job.skills && (
                                            <div class="flex flex-wrap gap-2 mb-6">
                                                {job.skills.map((skill) => (
                                                    <span class="text-xs uppercase tracking-wider font-bold text-gray-500 px-3 py-1.5 bg-white/5 rounded border border-white/5 group-hover:border-neon-red/20 transition-colors">
                                                        {skill}
                                                    </span>
                                                ))}
                                            </div>
                                        )}

                                        {/* View Experience Button */}
                                        <div class="pt-4 border-t border-white/5">
                                            <a
                                                href={job.link}
                                                class="inline-flex items-center text-sm font-bold uppercase tracking-wide text-neon-red hover:opacity-80 transition-all"
                                            >
                                                View Experience
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="16"
                                                    height="16"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    class="ml-2 transition-transform group-hover:translate-x-1"
                                                >
                                                    <path d="M5 12h14" />
                                                    <path d="m12 5 7 7-7 7" />
                                                </svg>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                {/* Timeline Node - centered - comes after peer */}
                                <div class="hidden lg:block absolute left-1/2 transform -translate-x-1/2 top-12 w-5 h-5 rounded-full bg-black border-3 border-neon-red shadow-[0_0_20px_rgba(255,0,60,0.5)] peer-hover:bg-neon-red z-10 peer-hover:scale-110 transition-all" />
                            </div>
                        );
                    })
                }
            </div>
        </div>

        <!-- Bottom spacing -->
        <div class="h-12 md:h-40"></div>
    </div>
    <footer
        class="py-12 border-t border-white/5 w-full text-center text-gray-500 text-sm bg-black/50 backdrop-blur-sm"
    >
        <p>
            &copy; {new Date().getFullYear()} Mukund. Built with Astro & TailwindCSS.
        </p>
    </footer>
</Layout>
