<section
  class="min-h-screen flex items-center relative overflow-hidden pt-32 pb-20"
>
  <div
    class="w-full px-6 md:px-12 flex flex-col lg:flex-row gap-12 items-center justify-evenly relative z-10"
  >
    <!-- Left Column: Typography & Content -->
    <div class="flex flex-col items-start z-20 w-fit">
      <!-- Greeting -->
      <h2
        class="text-neon-gold font-bold tracking-[0.2em] text-xl md:text-2xl min-[1920px]:text-[1.25vw] mb-2 animate-fade-in"
      >
        HI, I'M
      </h2>

      <!-- Name -->
      <h1
        class="text-5xl md:text-8xl min-[1920px]:text-[5vw] font-black tracking-tighter text-neon-red leading-[0.85] mb-6 animate-fade-in-up delay-100 drop-shadow-[0_0_15px_rgba(255,0,60,0.3)]"
      >
        MUKUND
      </h1>

      <!-- Dynamic Typewriter -->
      <div
        class="text-2xl md:text-3xl lg:text-4xl min-[1920px]:text-[1.9vw] font-bold font-mono h-[1.5em] flex items-center animate-fade-in-up delay-200"
      >
        <span class="text-white mr-4">I'M</span>
        <!-- Container for text + cursor -->
        <span class="inline-flex items-center">
          <span id="typing-text" class="text-neon-cyan"></span>
          <span id="cursor" class="animate-blink text-white ml-0.5 font-light"
            >|</span
          >
        </span>
      </div>

      <!-- Bio -->
      <p
        class="text-white max-w-lg min-[1920px]:max-w-[27vw] mt-8 text-lg min-[1920px]:text-[1vw] leading-relaxed animate-fade-in-up delay-300"
      >
        I’m a junior <span
          class="font-bold text-sky-300 border-b-2 border-neon-cyan/30"
          >computer science</span
        > and <span
          class="font-bold text-sky-300 border-b-2 border-neon-cyan/30"
          >math</span
        > double major at the
        <span class="text-neon-orange font-bold"
          >University of Texas at Austin</span
        >. I’m interested in building intelligent <span
          class="text-neon-gold font-bold">machine learning</span
        > systems to solve real-world problems in domains such as <span
          class="text-yellow-400 font-bold">operating systems</span
        >, <span class="text-blue-500 font-bold">robotics</span>, and <span
          class="text-neon-purple font-bold">quantum computing</span
        >. Check out my experiences, projects, and blog to take a look at what
        I’ve been up to.
      </p>

      <!-- Action Buttons Row -->
      <div class="flex flex-wrap gap-4 mt-10 animate-fade-in-up delay-500">
        <a
          href="/experiences"
          class="px-8 py-3 min-[1920px]:px-[1.6vw] min-[1920px]:py-[0.6vw] min-[1920px]:text-[0.8vw] rounded-full bg-neon-red/10 border border-neon-red text-neon-red font-bold tracking-wide hover:bg-neon-red hover:text-black transition-all shadow-[0_0_20px_-5px_rgba(255,0,60,0.4)] hover:shadow-[0_0_30px_-5px_rgba(255,0,60,0.6)]"
        >
          EXPERIENCES
        </a>
        <a
          href="/projects"
          class="px-8 py-3 min-[1920px]:px-[1.6vw] min-[1920px]:py-[0.6vw] min-[1920px]:text-[0.8vw] rounded-full bg-neon-gold/10 border border-neon-gold text-neon-gold font-bold tracking-wide hover:bg-neon-gold hover:text-black transition-all shadow-[0_0_20px_-5px_rgba(255,215,0,0.4)] hover:shadow-[0_0_30px_-5px_rgba(255,215,0,0.6)]"
        >
          PROJECTS
        </a>
        <a
          href="/blog"
          class="px-8 py-3 min-[1920px]:px-[1.6vw] min-[1920px]:py-[0.6vw] min-[1920px]:text-[0.8vw] rounded-full bg-neon-purple/10 border border-neon-purple text-neon-purple font-bold tracking-wide hover:bg-neon-purple hover:text-white transition-all shadow-[0_0_20px_-5px_rgba(191,0,255,0.4)] hover:shadow-[0_0_30px_-5px_rgba(191,0,255,0.6)]"
        >
          BLOG
        </a>
      </div>
    </div>

    <!-- Right Column: Tech Frame Profile (SQUARE + BIGGER + COLOR) -->
    <div
      class="relative flex flex-col justify-center items-center z-10 animate-fade-in delay-300 mt-12 lg:mt-0 w-full lg:w-fit"
    >
      <!-- The Frame itself -->
      <div
        class="relative w-[80vw] max-w-[400px] min-[1920px]:w-[21vw] min-[1920px]:max-w-none aspect-square rounded-[2.5rem] shadow-[0_0_50px_-10px_rgba(120,40,250,0.5)] z-10 group overflow-hidden mx-auto"
      >
        <!-- Image Container -->
        <div class="w-full h-full bg-gray-900">
          <img
            src="/profile-picture.jpeg"
            alt="Mukund"
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
          />
        </div>
      </div>

      <!-- Social Media Icons Row -->
      <div
        class="flex gap-8 mt-12 animate-fade-in-up delay-700 items-center justify-center relative z-20"
      >
        {
          socialLinks.map((social) => {
            const iconPath = socialIcons[social.name.toLowerCase()];
            if (!iconPath) return null;

            const isMail = social.name.toLowerCase() === "mail";

            return (
              <a
                href={social.link}
                target={social.link.startsWith("http") ? "_blank" : "_self"}
                rel={
                  social.link.startsWith("http")
                    ? "noopener noreferrer"
                    : undefined
                }
                class="text-white/80 hover:text-white transition-transform hover:scale-125 duration-300"
                aria-label={social.name}
              >
                <svg
                  class="w-8 h-8"
                  fill={isMail ? "none" : "currentColor"}
                  viewBox="0 0 24 24"
                  stroke={isMail ? "currentColor" : undefined}
                  stroke-width={isMail ? "2" : undefined}
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d={iconPath}
                    stroke-linecap={isMail ? "round" : undefined}
                    stroke-linejoin={isMail ? "round" : undefined}
                  />
                </svg>
              </a>
            );
          })
        }
      </div>
    </div>
  </div>
</section>

<!-- Scroll Indicator -->
<!-- 
    ADJUSTMENT INSTRUCTION: 
    The visibility is now controlled by the CSS style block at the bottom of this file.
    Look for the '.scroll-indicator' class and the @media query.
  -->
<div
  class="scroll-indicator absolute left-1/2 transform -translate-x-1/2 flex-col items-center gap-2 opacity-80 hover:opacity-100 transition-opacity cursor-pointer bottom-8"
>
  <div
    class="w-[24px] h-[40px] rounded-[12px] border-2 border-white/40 flex justify-center pt-2"
  >
    <div class="w-1 h-2 bg-white rounded-full animate-wheel"></div>
  </div>
  <span class="text-xs uppercase tracking-[0.2em] text-white">Scroll</span>
</div>

<style>
  /* 
    SCROLL INDICATOR VISIBILITY
    - Default: Hidden
    - Visible ONLY if:
      1. Screen is wider than 1024px (Desktop)
      2. Screen is taller than 840px (Prevents overlap on short screens)
  */
  .scroll-indicator {
    display: none;
  }

  @media (min-width: 1024px) and (min-height: 840px) {
    .scroll-indicator {
      display: flex;
    }
  }
</style>

<!-- DYNAMIC CIRCUIT GENERATOR SCRIPT -->
<script is:inline>
  // Typing Logic
  const phrases = [
    { text: "A STUDENT", color: "text-neon-orange" },
    { text: "A RESEARCHER", color: "text-[#DFC5FE]" },
    { text: "AN INNOVATOR", color: "text-red-800" },
    { text: "A COMPUTER SCIENTIST", color: "text-neon-cyan" },
  ];

  const element = document.getElementById("typing-text");
  let phraseIndex = 0;
  let charIndex = 0;
  let isDeleting = false;

  function type() {
    if (!element) return;
    const currentPhrase = phrases[phraseIndex];
    element.className = `${currentPhrase.color}`;
    if (isDeleting) {
      element.innerText = currentPhrase.text.substring(0, charIndex - 1);
      charIndex--;
    } else {
      element.innerText = currentPhrase.text.substring(0, charIndex + 1);
      charIndex++;
    }
    let typeSpeed = isDeleting ? 40 : 80;
    if (!isDeleting && charIndex === currentPhrase.text.length) {
      typeSpeed = 2000;
      isDeleting = true;
    } else if (isDeleting && charIndex === 0) {
      isDeleting = false;
      phraseIndex = (phraseIndex + 1) % phrases.length;
      typeSpeed = 200;
    }
    setTimeout(type, typeSpeed);
  }
  if (element) setTimeout(type, 1000);
</script>

<style>
  .animate-blink {
    animation: blink 1s step-end infinite;
  }
  @keyframes blink {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }

  .animate-spin-slow {
    animation: spin 15s linear infinite;
  }
  .animate-reverse-spin {
    animation: spin 20s linear infinite reverse;
  }
  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes wheel {
    0% {
      transform: translateY(0);
      opacity: 1;
    }
    100% {
      transform: translateY(15px);
      opacity: 0;
    }
  }
  .animate-wheel {
    animation: wheel 2s infinite;
  }
</style>
