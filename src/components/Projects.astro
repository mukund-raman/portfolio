---
import Card from "./Card.astro";

const projects = [
  {
    title: "Project Alpha",
    description:
      "A high-performance web application built with Astro and React. Features server-side rendering and edge computing for minimal latency.",
    tags: ["Astro", "React", "Tailwind"],
    link: "#",
    image:
      "https://images.unsplash.com/photo-1555066931-4365d14bab8c?q=80&w=2000&auto=format&fit=crop",
    date: "Oct 2025",
    demoLink: "#",
    isFeatured: true,
  },
  {
    title: "DataViz Dashboard",
    description:
      "Real-time dashboard for complex data visualization using D3.js. Handles millions of data points with WebSocket integration.",
    tags: ["D3.js", "TypeScript", "WebSocket"],
    link: "#",
    image:
      "https://images.unsplash.com/photo-1551288049-bebda4e38f71?q=80&w=2000&auto=format&fit=crop",
    date: "Sep 2025",
    demoLink: "#",
    isFeatured: true,
  },
  {
    title: "E-Commerce Platform",
    description:
      "Full-featured e-commerce platform with Stripe integration, product inventory management, and admin dashboard.",
    tags: ["Next.js", "Stripe", "PostgreSQL"],
    link: "#",
    image:
      "https://images.unsplash.com/photo-1563013544-824ae1b704d3?q=80&w=2000&auto=format&fit=crop",
    date: "Aug 2025",
    demoLink: "#",
    isFeatured: false,
  },
];
---

<section id="projects" class="py-20 w-full">
  <h3 class="text-3xl font-bold mb-8 text-white flex items-center gap-3">
    <span class="w-2 h-8 bg-purple-500 rounded-sm"></span>
    Featured Projects
  </h3>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      projects.map((project) => (
        <div class="h-full">
          <Card
            title={project.title}
            subtitle={project.isFeatured ? "Featured" : "Project"}
            description={project.description}
            tags={project.tags}
            link={project.link}
            image={project.image}
            viewLink={project.demoLink}
            color="purple"
            date={project.date}
          />
        </div>
      ))
    }
  </div>
</section>
